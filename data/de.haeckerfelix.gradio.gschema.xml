<schemalist>
  <schema id="de.haeckerfelix.gradio" path="/de/haeckerfelix/gradio/" gettext-domain="gradio">
    <key name="hide-broken-stations" type="b">
      <default>true</default>
      <summary>Only show working radio stations</summary>
    </key>

    <key name="enable-dark-theme" type="b">
      <default>false</default>
      <summary>Prefer dark theme of the user interface</summary>
    </key>

    <key name="enable-mpris" type="b">
      <default>true</default>
      <summary>MPRIS support</summary>
    </key>

    <key name="enable-background-playback" type="b">
      <default>true</default>
      <summary>Continue the playback if window is closed.</summary>
    </key>

    <key name="enable-caching" type="b">
      <default>true</default>
      <summary>Cache station icons</summary>
    </key>

    <key name="enable-notifications" type="b">
      <default>true</default>
      <summary>Show notifications</summary>
    </key>

    <key name="show-technical-information" type="b">
      <default>false</default>
      <summary>Show technical information in the UI</summary>
    </key>

    <key name="volume-position" type="d">
      <default>0.99</default>
      <summary>Volume position</summary>
    </key>

    <key name="window-height" type="i">
      <default>500</default>
      <summary>Height of the window</summary>
    </key>

    <key name="window-width" type="i">
      <default>870</default>
      <summary>Width of the window</summary>
    </key>

    <key name="resume-playback-on-startup" type="b">
      <default>false</default>
      <summary>Resume Playback On Startup</summary>
    </key>

    <key name="previous-station" type="i">
      <default>0</default>
      <summary>The last played station</summary>
    </key>

    <key name="icon-zoom" type="i">
      <default>200</default>
      <summary>The size of the station icons</summary>
    </key>

    <key name="station-sorting" type="i">
      <default>1</default>
      <summary></summary>
    </key>

    <key name="sort-ascending" type="b">
      <default>false</default>
      <summary></summary>
    </key>

    <key name="enable-tray-icon" type="b">
      <default>false</default>
      <summary>Show a tray icon to restore gradio</summary>
    </key>

    <key name="max-search-results" type="i">
      <default>100</default>
      <summary>Maximum of stations to show in search</summary>
    </key>
  </schema>
</schemalist>
